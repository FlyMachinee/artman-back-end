<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hit.artman.mapper.ImageMapper">

    <resultMap id="BaseResultMap" type="cn.edu.hit.artman.pojo.po.Image">
            <id property="imageId" column="image_id" />
            <result property="userId" column="user_id" />
            <result property="name" column="name" />
            <result property="url" column="url" />
            <result property="uploadTime" column="upload_time" />
    </resultMap>

    <sql id="Base_Column_List">
        image_id,user_id,name,url,upload_time
    </sql>

    <select id="getImagesByUserId" resultType="cn.edu.hit.artman.pojo.po.Image">
        select
        <include refid="Base_Column_List" />
        from image
        where user_id = #{userId}
        order by upload_time desc
    </select>
</mapper>
